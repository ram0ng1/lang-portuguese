{
    "name": "tiuram0n/lang-portuguese,
    "type": "flarum-extension",
    "description": "Pacote de idioma Português do Brasil.",
    "homepage": "https://coode.in",	
    "keywords": [
		"brazilian",
		"portuguese",
		"language",
		"locale",
	    	"português",
	    	"extensao"
	],
    "license": "MIT",
    "authors": [
        {
            "name": "Ramon Guilherme",
            "email": "ramonguilherme@outlook.com",
            "homepage": "https://ramonguilherme.com.br"
        }
           
    ],
    "support": {
	    "issues": "https://github.com/tiuram0n/lang-portuguese/issues",
	    "source": "https://github.com/tiuram0n/lang-portuguese"
    },	
    "require": {
        "flarum/core": "^0.1.0-beta.11"
    },
    "extra": {
        "flarum-extension": {
            "title": "Brazilian Portuguese",
            "icon": {
                "image": "icon.svg",
                "backgroundColor": "#82C300",
                "backgroundSize": "cover",
                "backgroundPosition": "center"
            }
        },
        "flarum-locale": {
            "code": "pt-BR",
            "title": "Português Brasileiro"
        }
    }
}
